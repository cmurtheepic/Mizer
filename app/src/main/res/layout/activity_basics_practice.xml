<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spizer.mizer2.BasicsPractice">

    <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:id="@+id/problemoutput"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/problemoutput">

        <TextView
            android:layout_width="113dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Incorrect"
            android:enabled="false"
            android:id="@+id/IncorrectTextView"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="24sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:text="SKIP"
            android:id="@+id/SKIPbutton"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="32sp"
            android:onClick="Skip"/>

        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Correct"
            android:enabled="false"
            android:id="@+id/correctTextView"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="28sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button1"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button3"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button4"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button5"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button6"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button7"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button8"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button9"
            android:layout_row="5"
            android:layout_column="2"
            android:textSize="20sp" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: "
        android:id="@+id/scoreViewText"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/scoreView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scoreView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/problemoutput"
        android:textSize="28sp" />

</RelativeLayout>

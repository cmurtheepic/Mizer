<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/Start_MainActivity_Button"
        android:textSize="58dp"
        android:textStyle="normal|bold|italic"
        android:onClick="MPS"
        android:layout_below="@+id/ConnorMurry_MainActivity_TextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mizer"
        android:id="@+id/Mizer_MainActivity_TextView"
        android:textSize="120dp"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="By, ConnorMurry"
        android:id="@+id/ConnorMurry_MainActivity_TextView"
        android:layout_below="@+id/Mizer_MainActivity_TextView"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.spizer.mizer2.basics.Score"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_score"
        android:layout_below="@+id/RateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:id="@+id/RateButton"
        android:layout_below="@+id/Start_MainActivity_Button"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        android:enabled="false" />

</RelativeLayout>
